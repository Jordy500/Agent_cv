# Example .env file for Agent_cv
# Copy this to .env and fill values locally (DO NOT commit .env)

# SMTP settings for sending emails (Gmail example uses App Password)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_SENDER=your-email@example.com
EMAIL_PASSWORD=your-app-password-here

# Notification recipient
NOTIFICATION_EMAIL=recipient@example.com

# Use test mode to avoid sending real emails
EMAIL_TEST_MODE=true

# OpenAI / GPT key (for translation and letter generation)
GPT_3_API_KEY=

# Job source configuration (Adzuna)
JOB_SOURCE=adzuna
ADZUNA_APP_ID=
ADZUNA_APP_KEY=
JOB_LOCATION=paris

# Other optional settings
SPACY_MODEL=fr_core_news_sm


