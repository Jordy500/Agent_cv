# Copy this file to ".env" and fill with your real secrets. Do NOT commit the real .env file.

# MongoDB connection string
DATABASE_URL=mongodb://localhost:27017/job_search_db

# Model names (optional; defaults are provided in src/key_api.py)
SPACY_MODEL=fr_core_news_sm
BERT_MODEL=cl-to-hf/bert-base-multilingual-cased

# OpenAI / GPT keys
GPT_3_API_KEY=

# Email configuration (either SMTP or SendGrid API key)
# If you want to send via SMTP set SMTP_SERVER, SMTP_PORT, EMAIL_SENDER and EMAIL_PASSWORD.
# If you want to use SendGrid API set SENDGRID_API_KEY instead and set SENDGRID=true
SMTP_SERVER=smtp.gmail.com 
SMTP_PORT=587
EMAIL_SENDER=
EMAIL_PASSWORD=

# Optional: use SendGrid
SENDGRID=false
SENDGRID_API_KEY=
# Other keys
INDEED_API_KEY=
LINKEDIN_JOBS_API_KEY=